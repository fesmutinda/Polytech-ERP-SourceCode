            end;

            trigger OnAfterGetRecord();
            begin
                HolidayTable.Reset;
                if not HolidayTable.IsEmpty then
                    HolidayTable.DeleteAll();

                GenJournalLine.Reset;
                GenJournalLine.SetRange("Journal Template Name", 'PAYMENTS');
                GenJournalLine.SetRange("Journal Batch Name", 'HOLIDAY');
                if not GenJournalLine.IsEmpty then
                    GenJournalLine.DeleteAll();

                Customer.Reset();
                Customer.SetRange("No.", Cust."No.");
                if Customer.Find('-') then begin
                    repeat
                        HolidaySavingsProcessing.FnProcessHolidaySavings(Customer."No.", StartDate, PostingDate);
                        ProcessedCount += 1;
                    until Customer.Next = 0;
                end;
                TotalProcessed += ProcessedCount;
            end;

            trigger OnPostDataItem();
            begin
                Message('Successfully generated %1 records.', TotalProcessed);
            end;

        }
    }
    requestpage
    {
        SaveValues = false;
        layout
        {
            area(Content)
            {
                field(StartDate; StartDate)
                {
                    ApplicationArea = Basic;
                    Caption = 'Start Date';
                }
                field(PostingDate; PostingDate)
                {
                    ApplicationArea = Basic;
                    Caption = 'PostingDate';
                }

            }
        }

    }

    trigger OnPreReport()
    begin
        if PostingDate = 0D then Error('Posting Date MUST be Specified');
        if StartDate = 0D then Error('Start Date MUST be Specified');
